# Configuration BiblioTech - GitHub Codespace Ready
# Formation Laravel BTS SIO SLAM - Séance 1 : Fondations + Docker

# Application
APP_NAME="BiblioTech"
APP_ENV=local
APP_KEY=base64:WILL_BE_GENERATED_AUTOMATICALLY
APP_DEBUG=true
APP_URL=http://localhost:8000

# Timezone
APP_TIMEZONE=Europe/Paris

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de données PostgreSQL (pré-configurée pour Codespace)
DB_CONNECTION=pgsql
DB_HOST=database
DB_PORT=5432
DB_DATABASE=bibliotech
DB_USERNAME=postgres
DB_PASSWORD=secret

# Cache & Session (optimisé pour Codespace)
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Mail - MailHog pour développement (pré-configuré)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="bibliotech@formation-laravel.fr"
MAIL_FROM_NAME="${APP_NAME}"

# Variables spécifiques à la formation
SEANCE_ACTIVE=1
FORMATION_MODE=true
DEBUG_QUERIES=true
SHOW_DEMO_DATA=true

# Services externes (pour les séances futures)
# Redis - sera activé en Séance 4
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Broadcasting - sera activé en Séance 4 (WebSockets)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite (frontend build tool)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# AWS - sera configuré pour la production (Séance 8)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuration GitHub (pour CI/CD - Séance 2)
GITHUB_TOKEN=
GITHUB_REPOSITORY=

# OpenAI - sera configuré en Séance 5 (IA)
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Configuration Docker pour Codespace
DOCKER_APP_PORT=8000
DOCKER_DB_PORT=5432
DOCKER_MAILHOG_WEB_PORT=8025
DOCKER_MAILHOG_SMTP_PORT=1025
DOCKER_ADMINER_PORT=8080

# Configuration spécifique Codespace
CODESPACE_NAME="${CODESPACE_NAME}"
GITHUB_CODESPACES_TOKEN="${GITHUB_TOKEN}"

# Développement et debug
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
QUERY_DETECTOR_ENABLED=false

# Sécurité (sera renforcée en Séance 4)
BCRYPT_ROUNDS=10
SECURITY_HEADERS=true

# Analytics (sera configuré en Séance 7)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Monitoring (sera configuré en Séance 8)
SENTRY_LARAVEL_DSN=
NEW_RELIC_LICENSE_KEY=

# Configuration locale pour la démo
DEMO_BOOKS_COUNT=5
DEMO_USERS_COUNT=3
FAKE_DATA_LOCALE=fr_FR

# URLs des services (configurées automatiquement par docker-compose)
MAILHOG_WEB_URL=http://localhost:8025
ADMINER_URL=http://localhost:8080
DATABASE_URL=postgresql://postgres:secret@database:5432/bibliotech