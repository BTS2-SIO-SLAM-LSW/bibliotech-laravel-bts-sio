# Configuration BiblioTech - Séance 1
APP_NAME=BiblioTech
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Base de données PostgreSQL (Séance 2)
DB_CONNECTION=pgsql
DB_HOST=database
DB_PORT=5432
DB_DATABASE=bibliotech
DB_USERNAME=postgres
DB_PASSWORD=secret

# Cache et sessions (Redis en Séance 3)
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Mail (MailHog pour développement)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@bibliotech.local"
MAIL_FROM_NAME="${APP_NAME}"

# Logs
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuration Codespace
CODESPACE=true